/* ============================================
   PREMIUM FUTURISTIC PORTFOLIO - REDESIGN
   Monochrome Black/White/Grey Theme
   Glass-morphism + HUD + Micro-animations
   ============================================ */

* {
    margin: 0;
    padding: 0;
    box-sizing: border-box;
}

/* ===== BASE STYLES ===== */
html {
    scroll-behavior: smooth;
    font-size: 16px;
}

body {
    font-family: 'Inter', -apple-system, BlinkMacSystemFont, 'Segoe UI', sans-serif;
    background: linear-gradient(180deg, #000000 0%, #0a0a0a 40%, #050505 100%);
    color: #ffffff;
    overflow-x: hidden;
    min-height: 100vh;
    position: relative;
    -webkit-font-smoothing: antialiased;
    -moz-osx-font-smoothing: grayscale;
    display: flex;
    flex-direction: column;
    line-height: 1.6;
}

/* ===== ANIMATED BACKGROUND LAYER ===== */
.background-shapes {
    position: fixed;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
    z-index: 0;
    pointer-events: none;
    overflow: hidden;
}

/* Floating geometric shapes */
.shape {
    position: absolute;
    opacity: 0.05;
    border-radius: 50%;
    filter: blur(50px);
    will-change: transform;
}

.shape-1 {
    width: 500px;
    height: 500px;
    background: radial-gradient(circle, rgba(255,255,255,0.25), rgba(200,200,200,0.08));
    top: -150px;
    right: -100px;
    animation: float 35s infinite cubic-bezier(0.4, 0, 0.6, 1);
}

.shape-2 {
    width: 400px;
    height: 400px;
    background: radial-gradient(circle, rgba(180,180,180,0.15), rgba(150,150,150,0.05));
    bottom: 10%;
    left: -100px;
    animation: float 42s infinite cubic-bezier(0.4, 0, 0.6, 1) reverse;
}

.shape-3 {
    width: 350px;
    height: 350px;
    background: radial-gradient(circle, rgba(220,220,220,0.2), rgba(180,180,180,0.06));
    bottom: 5%;
    right: 8%;
    animation: float 38s infinite cubic-bezier(0.4, 0, 0.6, 1);
}

/* Floating GUI elements */
.float-blob {
    width: 320px;
    height: 240px;
    border-radius: 40% 60% 50% 50% / 50% 40% 60% 50%;
    background: radial-gradient(circle at 35% 35%, rgba(255,255,255,0.12), rgba(200,200,200,0.02));
    top: -80px;
    left: 5%;
    filter: blur(25px);
    opacity: 0.06;
    mix-blend-mode: overlay;
    animation: drift 45s infinite linear;
    will-change: transform;
}

.float-ring {
    width: 280px;
    height: 280px;
    border-radius: 50%;
    border: 1.5px solid rgba(220,220,220,0.08);
    background: transparent;
    top: 15%;
    right: 12%;
    opacity: 0.07;
    filter: blur(4px);
    animation: slowRotate 60s infinite linear;
    will-change: transform;
}

.float-square {
    width: 180px;
    height: 180px;
    background: linear-gradient(135deg, rgba(200,200,200,0.06), rgba(160,160,160,0.02));
    right: 5%;
    top: 60%;
    border-radius: 20px;
    filter: blur(15px);
    opacity: 0.05;
    animation: float 40s infinite ease-in-out;
    will-change: transform;
}

/* Accent lines for HUD feel */
.accent-line-1 {
    position: absolute;
    width: 700px;
    height: 1px;
    background: linear-gradient(90deg, transparent, rgba(200,200,200,0.2), transparent);
    top: 12%;
    left: -300px;
    animation: slideHorizontal 18s infinite linear;
    transform: rotate(12deg);
    opacity: 0.6;
}

.accent-line-2 {
    position: absolute;
    width: 1px;
    height: 500px;
    background: linear-gradient(180deg, transparent, rgba(180,180,180,0.15), transparent);
    top: 25%;
    right: 8%;
    animation: slideVertical 22s infinite linear;
    opacity: 0.6;
}

/* Animated Grid Overlay */
.grid-layer {
    position: fixed;
    inset: 0;
    z-index: 1;
    pointer-events: none;
    background-image:
        linear-gradient(rgba(255,255,255,0.015) 1px, transparent 1px),
        linear-gradient(90deg, rgba(255,255,255,0.015) 1px, transparent 1px);
    background-size: 50px 50px;
    opacity: 0.4;
    mix-blend-mode: overlay;
    animation: gridShift 120s linear infinite;
    will-change: background-position;
}

/* ===== ANIMATIONS ===== */
@keyframes float {
    0%, 100% { transform: translateY(0px) translateX(0px) scale(1); }
    25% { transform: translateY(-50px) translateX(40px) scale(1.05); }
    50% { transform: translateY(-100px) translateX(-30px) scale(0.98); }
    75% { transform: translateY(-50px) translateX(60px) scale(1.02); }
}

@keyframes drift {
    0% { transform: translate3d(0,0,0) scale(1) rotate(0deg); }
    25% { transform: translate3d(40px,-40px,0) scale(1.02) rotate(5deg); }
    50% { transform: translate3d(-30px,-80px,0) scale(0.98) rotate(10deg); }
    75% { transform: translate3d(50px,-30px,0) scale(1.03) rotate(-5deg); }
    100% { transform: translate3d(0,0,0) scale(1) rotate(360deg); }
}

@keyframes slowRotate {
    0% { transform: rotate(0deg) translateY(-10px); }
    50% { transform: rotate(180deg) translateY(10px); }
    100% { transform: rotate(360deg) translateY(-10px); }
}

@keyframes slideHorizontal {
    0% { transform: translateX(-700px) rotate(12deg); }
    100% { transform: translateX(100vw) rotate(12deg); }
}

@keyframes slideVertical {
    0% { transform: translateY(-500px); }
    100% { transform: translateY(100vh); }
}

@keyframes gridShift {
    0% { background-position: 0 0; }
    100% { background-position: 100px 100px; }
}

@keyframes slideInUp {
    from {
        opacity: 0;
        transform: translateY(30px);
    }
    to {
        opacity: 1;
        transform: translateY(0);
    }
}

@keyframes slideInDown {
    from {
        opacity: 0;
        transform: translateY(-30px);
    }
    to {
        opacity: 1;
        transform: translateY(0);
    }
}

@keyframes glow {
    0%, 100% { box-shadow: 0 0 20px rgba(255,255,255,0.1), inset 0 1px 0 rgba(255,255,255,0.05); }
    50% { box-shadow: 0 0 40px rgba(255,255,255,0.15), inset 0 1px 0 rgba(255,255,255,0.08); }
}

@keyframes shimmer {
    0% { background-position: -1000px 0; }
    100% { background-position: 1000px 0; }
}

/* ==================================================
   STATIC MODE OVERRIDE â€” disable all animations/transitions
   User requested: remove all animation/transition effects
   This enforces visible, non-animated elements while
   preserving layout, text and boxes.
   ==================================================*/
*,
*::before,
*::after {
    animation: none !important;
    transition: none !important;
    will-change: auto !important;
}

/* Ensure reveal/entrance elements are visible */
.reveal, .reveal.is-visible, .section, .project-card, .card-inner,
.float-blob, .float-ring, .float-square, .shape, .grid-layer,
.accent-line-1, .accent-line-2, .preloader-dot, .cert-thumb,
.project-card img, .nav a, .btn, .skip-link, #sidebar,
.float-box, .preview-icon {
    animation: none !important;
    transition: none !important;
    transform: none !important;
    opacity: 1 !important;
}

/* Hide decorative animated layers completely (optional) */
.background-shapes, .grid-layer, .float-blob, .float-ring, .shape, .float-square, .accent-line-1, .accent-line-2 {
    display: none !important;
}

/* ==========================
     FORCE: Black Boxes / No Gradients
     Strong overrides to make every box/card fully black, remove borders, radii, gradients,
     and neutralize decorative effects while keeping content readable.
     ========================== */

html, body {
    background: #000000 !important;
    color: #ffffff !important;
}

/* Disable all animations, transitions, filters and transforms globally */
*, *::before, *::after {
    animation: none !important;
    transition: none !important;
    transform: none !important;
    filter: none !important;
    will-change: auto !important;
}

/* Remove decorative background layers and animated shapes */
.background-shapes,
.shape,
.shape-1,
.shape-2,
.shape-3,
.float-blob,
.float-ring,
.float-square,
.accent-line-1,
.accent-line-2,
.grid-layer {
    display: none !important;
    opacity: 0 !important;
    background: transparent !important;
}

/* Force all box-like elements to pure black, remove borders, shadows and radii */
.project-card,
.skill-card,
.profile-card,
.profile-photo,
.profile-photo img,
.cert-thumb,
.container,
.section,
.hero,
.about-grid,
.projects-grid,
.skills-grid,
.contact-actions,
.timeline-item,
.site-header,
.site-footer,
.footer-inner,
.nav,
.header-inner,
.project-card img,
.project-card .tags span,
.tags span,
.btn,
.back-to-top,
.back-top {
    background-image: none !important;
    background: #000000 !important;
    background-color: #000000 !important;
    border: none !important;
    border-color: transparent !important;
    box-shadow: none !important;
    border-radius: 0 !important;
}

/* Neutralize any inline style backgrounds that may use gradients */
[style*="background"] {
    background: #000000 !important;
    background-image: none !important;
}

/* Hide preloader */
.preloader, #preloader, .preloader-dot { display:none !important; }

/* Disable reveal/tilt classes and keep elements visible */
.reveal, .is-visible, .tilt, .glow-edge, .cursor-active { opacity: 1 !important; transform: none !important; }

/* Neutralize interactive micro-interactions */
.nav a:hover, .btn:hover, .nav a:focus, a:hover, a:focus { transform: none !important; }

/* Force SVG accents to use solid white strokes/fills (no gradients) and remove filters */
.project-card svg, .project-card svg * {
    stroke: #ffffff !important;
    fill: #ffffff !important;
    filter: none !important;
    mix-blend-mode: normal !important;
    opacity: 1 !important;
}

/* Make images show without blend modes or filters */
img { filter: none !important; mix-blend-mode: normal !important; }

/* Keep focus outlines accessible but simple */
a:focus, button:focus { outline: 2px solid #ffffff !important; outline-offset: 2px !important; }


/* ===== HEADER ===== */
header {
    position: relative;
    z-index: 10;
    padding: 100px 30px 60px;
    background: linear-gradient(180deg, rgba(10,10,10,0.9), rgba(10,10,10,0.7));
    backdrop-filter: blur(20px);
    border-bottom: 1px solid rgba(255,255,255,0.06);
    animation: slideInDown 0.8s cubic-bezier(0.34, 1.56, 0.64, 1);
    box-shadow: 0 10px 40px rgba(0,0,0,0.4), inset 0 1px 0 rgba(255,255,255,0.03);
}

header h1 {
    font-size: clamp(2.5rem, 8vw, 4rem);
    font-weight: 800;
    letter-spacing: -1px;
    margin: 0 0 12px 0;
    color: #ffffff;
    text-shadow: 0 2px 10px rgba(0,0,0,0.3);
    animation: slideInUp 0.8s ease-out 0.1s both;
}

header p {
    font-size: clamp(0.9rem, 2.5vw, 1.1rem);
    color: #ffffff;
    font-weight: 400;
    letter-spacing: 0.5px;
    margin: 0;
    animation: slideInUp 0.8s ease-out 0.2s both;
}

header > div {
    display: flex;
    align-items: center;
    justify-content: space-between;
    max-width: 1400px;
    margin: 0 auto;
    width: 100%;
    gap: 30px;
}

/* ===== LAYOUT CONTAINER ===== */
.content-wrapper {
    position: relative;
    z-index: 5;
    display: flex;
    gap: 40px;
    max-width: 1400px;
    width: 100%;
    margin: 60px auto;
    padding: 0 30px;
    flex: 1;
}

.main {
    flex: 1;
    min-width: 0;
}

/* ===== SIDEBAR ===== */
.sidebar {
    width: 320px;
    background: linear-gradient(135deg, rgba(15,15,15,0.8), rgba(10,10,10,0.95));
    backdrop-filter: blur(30px);
    border: 1px solid rgba(255,255,255,0.08);
    border-radius: 16px;
    padding: 32px;
    height: fit-content;
    align-self: flex-start;
    position: sticky;
    top: 40px;
    animation: slideInUp 0.8s ease-out 0.3s both;
    box-shadow: 0 20px 60px rgba(0,0,0,0.5), inset 0 1px 0 rgba(255,255,255,0.08);
    transition: all 0.45s cubic-bezier(0.34, 1.56, 0.64, 1);
}

.sidebar:hover {
    background: linear-gradient(135deg, rgba(20,20,20,0.85), rgba(15,15,15,0.98));
    border-color: rgba(255,255,255,0.12);
    box-shadow: 0 30px 80px rgba(0,0,0,0.6), inset 0 1px 0 rgba(255,255,255,0.1);
    transform: translateY(-8px);
}

.profile-photo {
    width: 100%;
    aspect-ratio: 1;
    background: linear-gradient(135deg, rgba(40,40,40,0.3), rgba(30,30,30,0.2));
    border: 1.5px solid rgba(255,255,255,0.1);
    border-radius: 12px;
    display: flex;
    align-items: center;
    justify-content: center;
    margin-bottom: 28px;
    overflow: hidden;
    transition: all 0.5s cubic-bezier(0.34, 1.56, 0.64, 1);
    box-shadow: 0 0 30px rgba(255,255,255,0.05), inset 0 1px 0 rgba(255,255,255,0.08);
    animation: glow 3s ease-in-out infinite;
}

.profile-photo:hover {
    border-color: rgba(255,255,255,0.2);
    box-shadow: 0 20px 50px rgba(255,255,255,0.1), inset 0 1px 0 rgba(255,255,255,0.12);
    transform: scale(1.02);
}

.profile-photo img {
    width: 100%;
    height: 100%;
    object-fit: cover;
    display: block;
    transition: transform 0.5s cubic-bezier(0.34, 1.56, 0.64, 1);
}

.profile-photo:hover img {
    transform: scale(1.08);
}

.sidebar h3 {
    font-size: 1.2rem;
    font-weight: 700;
    color: #ffffff;
    margin: 20px 0 8px 0;
    letter-spacing: 0.3px;
}

.sidebar > p {
    font-size: 0.9rem;
    color: #ffffff;
    margin: 0 0 24px 0;
    line-height: 1.5;
}

/* Navigation Links */
.nav-links {
    display: flex;
    flex-direction: column;
    gap: 8px;
    margin: 24px 0;
}

.nav-links a {
    display: block;
    padding: 12px 16px;
    color: #ffffff;
    text-decoration: none;
    font-weight: 500;
    font-size: 0.95rem;
    border-radius: 10px;
    background: linear-gradient(135deg, rgba(255,255,255,0.03), rgba(255,255,255,0.01));
    border: 1px solid rgba(255,255,255,0.05);
    transition: all 0.3s cubic-bezier(0.34, 1.56, 0.64, 1);
    position: relative;
    overflow: hidden;
}

.nav-links a::before {
    content: '';
    position: absolute;
    left: 0;
    top: 0;
    height: 100%;
    width: 3px;
    background: linear-gradient(180deg, rgba(255,255,255,0.8), rgba(255,255,255,0.2));
    transform: translateX(-3px);
    transition: all 0.3s ease;
}

.nav-links a:hover {
    background: linear-gradient(135deg, rgba(255,255,255,0.08), rgba(255,255,255,0.04));
    border-color: rgba(255,255,255,0.12);
    color: #ffffff;
    padding-left: 20px;
}

.nav-links a:hover::before {
    transform: translateX(0);
}

/* Social Links */
.socials {
    display: flex;
    gap: 12px;
    margin: 24px 0;
}

.socials a {
    display: inline-flex;
    align-items: center;
    justify-content: center;
    width: 44px;
    height: 44px;
    border-radius: 10px;
    background: linear-gradient(135deg, rgba(255,255,255,0.06), rgba(255,255,255,0.02));
    border: 1px solid rgba(255,255,255,0.08);
    color: #ffffff;
    text-decoration: none;
    transition: all 0.3s cubic-bezier(0.34, 1.56, 0.64, 1);
    position: relative;
}

.socials a::after {
    content: '';
    position: absolute;
    inset: 0;
    border-radius: 10px;
    background: radial-gradient(circle at 30% 30%, rgba(255,255,255,0.2), transparent);
    opacity: 0;
    transition: opacity 0.3s ease;
}

.socials a:hover {
    background: linear-gradient(135deg, rgba(255,255,255,0.12), rgba(255,255,255,0.06));
    border-color: rgba(255,255,255,0.15);
    color: #ffffff;
    transform: translateY(-4px);
    box-shadow: 0 10px 25px rgba(0,0,0,0.3), 0 0 20px rgba(255,255,255,0.1);
}

.socials a:hover::after {
    opacity: 1;
}

/* Buttons */
.btn {
    display: inline-block;
    padding: 14px 28px;
    background: linear-gradient(135deg, rgba(255,255,255,0.1), rgba(255,255,255,0.05));
    color: #ffffff;
    text-decoration: none;
    font-weight: 600;
    font-size: 0.95rem;
    border: 1.5px solid rgba(255,255,255,0.12);
    border-radius: 10px;
    cursor: pointer;
    transition: all 0.35s cubic-bezier(0.34, 1.56, 0.64, 1);
    letter-spacing: 0.3px;
    position: relative;
    overflow: hidden;
}

.btn::before {
    content: '';
    position: absolute;
    top: 0;
    left: -100%;
    width: 100%;
    height: 100%;
    background: linear-gradient(90deg, transparent, rgba(255,255,255,0.2), transparent);
    transition: left 0.5s ease;
}

.btn:hover {
    background: linear-gradient(135deg, rgba(255,255,255,0.15), rgba(255,255,255,0.08));
    border-color: rgba(255,255,255,0.25);
    transform: translateY(-4px);
    box-shadow: 0 15px 40px rgba(0,0,0,0.3), 0 0 30px rgba(255,255,255,0.08);
}

.btn:hover::before {
    left: 100%;
}

.btn:active {
    transform: translateY(-2px);
}

.btn-ghost {
    background: transparent;
    border: 1.5px solid rgba(255,255,255,0.2);
    color: #ffffff;
}

.btn-ghost:hover {
    background: rgba(255,255,255,0.06);
    border-color: rgba(255,255,255,0.35);
    color: #ffffff;
}

/* Hamburger Menu */
.hamburger {
    display: none;
    flex-direction: column;
    gap: 6px;
    background: transparent;
    border: none;
    cursor: pointer;
    padding: 8px;
    z-index: 101;
}

.hamburger span {
    width: 26px;
    height: 2.5px;
    background: linear-gradient(90deg, #ffffff, #c0c0c0);
    border-radius: 2px;
    transition: all 0.4s cubic-bezier(0.34, 1.56, 0.64, 1);
}

.hamburger.active span:nth-child(1) {
    transform: rotate(45deg) translate(12px, 12px);
}

.hamburger.active span:nth-child(2) {
    opacity: 0;
    transform: translateX(20px);
}

.hamburger.active span:nth-child(3) {
    transform: rotate(-45deg) translate(8px, -8px);
}

/* ===== SECTIONS ===== */
.section {
    position: relative;
    background: linear-gradient(135deg, rgba(15,15,15,0.6), rgba(10,10,10,0.8));
    backdrop-filter: blur(25px);
    border: 1px solid rgba(255,255,255,0.08);
    border-radius: 16px;
    padding: 60px;
    margin-bottom: 70px;
    animation: slideInUp 0.8s ease-out both;
    box-shadow: 0 20px 60px rgba(0,0,0,0.4), inset 0 1px 0 rgba(255,255,255,0.06);
    transition: all 0.45s cubic-bezier(0.34, 1.56, 0.64, 1);
    overflow: hidden;
    background: #000000 !important;
    background-color: #000000 !important;
    background-image: none !important;
    color: rgba(255,255,255,0.95) !important;
}

.section *:not(img):not(picture):not(video):not(svg) {
    background-color: #000000 !important;
    background: #000000 !important;
    background-image: none !important;
    color: rgba(255,255,255,0.95) !important;
    border-color: rgba(255,255,255,0.06) !important;
}

.section::before {
    content: '';
    position: absolute;
    top: 0;
    left: 0;
    right: 0;
    height: 1px;
    background: linear-gradient(90deg, transparent, rgba(255,255,255,0.1), transparent);
    pointer-events: none;
}

.section:nth-child(1) { animation-delay: 0.2s; }
.section:nth-child(2) { animation-delay: 0.3s; }
.section:nth-child(3) { animation-delay: 0.4s; }
.section:nth-child(4) { animation-delay: 0.5s; }
.section:nth-child(5) { animation-delay: 0.6s; }

.section:hover {
    background: linear-gradient(135deg, rgba(20,20,20,0.65), rgba(15,15,15,0.85));
    border-color: rgba(255,255,255,0.12);
    box-shadow: 0 30px 90px rgba(0,0,0,0.5), inset 0 1px 0 rgba(255,255,255,0.08);
    transform: translateY(-8px);
}

.section h2 {
    font-size: clamp(1.8rem, 5vw, 2.8rem);
    font-weight: 800;
    color: #ffffff;
    margin: 0 0 45px 0;
    letter-spacing: -0.5px;
    position: relative;
    padding-bottom: 20px;
}

.section h2::after {
    content: '';
    position: absolute;
    bottom: 0;
    left: 0;
    height: 3px;
    width: 0;
    background: linear-gradient(90deg, rgba(255,255,255,0.8), rgba(255,255,255,0.2));
    border-radius: 2px;
    animation: slideInRight 0.8s cubic-bezier(0.34, 1.56, 0.64, 1) forwards;
}

@keyframes slideInRight {
    to { width: 80px; }
}

/* Section content styling */
.section p, .info {
    font-size: 1.05rem;
    line-height: 1.8;
    color: #d0d0d0;
    margin: 0 0 20px 0;
}

.section strong {
    color: #ffffff;
    font-weight: 700;
}

/* ===== PROJECT CARDS ===== */
.project-card {
    display: flex;
    flex-direction: column;
    height: 100%;
    background: linear-gradient(135deg, rgba(25,25,25,0.6), rgba(15,15,15,0.8));
    backdrop-filter: blur(20px);
    border: 1px solid rgba(255,255,255,0.08);
    border-radius: 14px;
    padding: 32px;
    margin-bottom: 0;
    animation: slideInUp 0.8s ease-out both;
    box-shadow: 0 15px 50px rgba(0,0,0,0.4), inset 0 1px 0 rgba(255,255,255,0.06);
    transition: all 0.45s cubic-bezier(0.34, 1.56, 0.64, 1);
    position: relative;
    overflow: hidden;
    transform-style: preserve-3d;
    perspective: 1200px;
    background: #000000 !important;
    background-color: #000000 !important;
