:root {
  --black: #000000;
  --white: #ffffff;
}

* { box-sizing: border-box; }
html, body { height: 100%; }
body {
  margin: 0;
  font-family: Inter, system-ui, -apple-system, 'Segoe UI', Roboto, Arial, sans-serif;
  background: var(--black);
  color: var(--white);
  -webkit-font-smoothing: antialiased;
  -moz-osx-font-smoothing: grayscale;
}

.container { max-width: 1100px; margin: 0 auto; padding: 0 20px; }

.site-header { position: sticky; top: 0; z-index: 60; background: var(--black); border-bottom: 1px solid var(--white); }
.header-inner { display:flex; align-items:center; justify-content:space-between; padding:14px 0; }
.brand { font-weight:700; letter-spacing:1px; }
.nav { display:flex; gap:18px; }
.nav a { color:var(--white); text-decoration:none; font-weight:600; padding:8px 6px; }
.nav a:hover, .nav a:focus { transform: translateY(-2px); transition: transform .18s ease; }
.nav-toggle { display:none; background:transparent; color:var(--white); border:1px solid transparent; padding:8px 12px; font-weight:700; }

.preloader { position:fixed; inset:0; display:flex; align-items:center; justify-content:center; background:var(--black); z-index:120; }
.preloader-dot { width:12px; height:12px; background:var(--white); border-radius:50%; animation: pulse-fade 900ms ease-in-out infinite; }
@keyframes pulse-fade { 0%{ opacity:0.4 } 50%{ opacity:1 } 100%{ opacity:0.4 } }
.preloader.loaded { display:none; }

.section { padding:64px 0; }
.section-title { font-size:20px; margin:0 0 18px 0; font-weight:700; }

.hero-grid { display:flex; gap:28px; align-items:center; justify-content:space-between; }
.hero-name { font-size:40px; margin:0 0 6px 0; font-weight:800; }
.hero-role { margin:0 0 14px 0; font-weight:600; }
.hero-lead { margin:0 0 18px 0; max-width:60ch; }
.hero-ctas { display:flex; gap:14px; align-items:center; flex-wrap:wrap; margin-top:8px; }

.btn { display:inline-block; padding:10px 14px; color:var(--white); text-decoration:none; border:1px solid var(--white); border-radius:8px; font-weight:700; }
.btn.primary { border-color:var(--white); }
.btn:hover, .btn:focus { transform: translateY(-3px); transition: transform .16s ease; }

.about-grid { display:grid; grid-template-columns:160px 1fr; gap:20px; align-items:start; }
.profile-photo img { width:160px; height:160px; object-fit:cover; display:block; border-radius:8px; border:1px solid var(--white); }

.skills-grid { display:grid; grid-template-columns:repeat(auto-fit,minmax(140px,1fr)); gap:12px; }
.skill-card { padding:12px; border-radius:8px; border:1px solid var(--white); text-align:center; font-weight:700; }

.projects-grid { display:grid; grid-template-columns:repeat(auto-fit,minmax(260px,1fr)); gap:18px; }
.project-card { padding:14px; border-radius:10px; border:1px solid var(--white); display:flex; flex-direction:column; gap:10px; }
.project-card img { width:100%; height:160px; object-fit:cover; border-radius:6px; display:block; }

.timeline { display:flex; flex-direction:column; gap:12px; }
.timeline-item { padding:10px 0; border-bottom:1px solid var(--white); }

.contact-actions { display:flex; gap:12px; margin-top:12px; flex-wrap:wrap; }

.site-footer { border-top:1px solid var(--white); padding:22px 0; background:var(--black); }
.footer-inner { display:flex; gap:14px; align-items:center; justify-content:space-between; flex-wrap:wrap; }
.back-to-top { background:transparent; color:var(--white); border:1px solid var(--white); padding:8px 10px; border-radius:6px; font-weight:700; }

@keyframes revealSlide { from { opacity: 0; transform: translateY(30px); } to { opacity: 1; transform: translateY(0); } }
.reveal { opacity: 0; transform: translateY(30px); animation: revealSlide 0.7s cubic-bezier(0.25, 0.46, 0.45, 0.94) forwards; will-change: opacity, transform; }
.reveal.is-visible { opacity: 1; transform: none; animation: none; }

a { color:var(--white); }
a:focus { outline:2px solid var(--white); outline-offset:3px; }

@media (max-width:900px){
  .nav { display:none; position:absolute; right:20px; top:64px; background:var(--black); border:1px solid var(--edge); padding:12px; flex-direction:column; gap:8px; }
  .nav.open { display:flex; }
  .nav-toggle { display:inline-block; }
  .hero-grid { flex-direction:column; align-items:flex-start; gap:18px; }
  .about-grid { grid-template-columns:120px 1fr; }
}

@media (max-width:480px){
  .hero-name { font-size:28px; }
  .hero-lead { font-size:15px; }
  .profile-photo img { width:120px; height:120px; }
  .skills-grid { grid-template-columns:repeat(2,1fr); }
}
