}

/* Project card image */
.project-card > div:first-child {
    position: relative;
    width: 100%;
    aspect-ratio: 16 / 10;
    background: linear-gradient(135deg, rgba(80,80,80,0.2), rgba(60,60,60,0.1));
    border: 1px solid rgba(255,255,255,0.08);
    border-radius: 10px;
    margin-bottom: 24px;
